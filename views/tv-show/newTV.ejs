<body>
    <%- include('../partials/navbar.ejs') %>
    <h1 id='header'>Add a TV Show</h1>
    <div id='body'>
        <img id='img' src='../images/tv.png'>
        <br>
        <br>
        <form method='POST' action='/tv-show/newTV'>
            <label for='title'>Title of the Show:</label>
            <br>
            <br>
            <input type='text' name='title'>
            <br>
            <label for="rating">Rating:</label>
            <br>
            <br>
            <input type="text" name="rating">
            <br>
            <label for="genre">Genre:</label>
            <br>
            <br>
            <input type="text" name="genre">
            <br>
            <label for="summary">Show Summary:</label>
            <br>
            <br>
            <input type="text" name="summary">
            <br>
            <label for="tvcover" id='tvcover'>TV Cover:</label>
            <br>
            <br>
            <input type="text" name="tvcover">
            <br>
            <a href='/tv-show' id='back'> Back To All </a> 
            <input type='submit'>
        </form>
    </div>
</body>
</html>